---
import Layout from '../layouts/Layout.astro';
---

<Layout title="">
	<main>
		<h1><span class="text-gradient">Astro</span> CloudFlare Error</h1>
		<p class="instructions">
			Welcome to the AstroJS CloudFlare Error Page.
			<br>
			The following error pages are static pages generated by AstroJS for use with CloudFlare's custom error pages feature available in Pro and up
		</p>
		<p>
			<h2 class="text-2xl pt-4">Technology</h2>
			<ul class="text-gray-500 font-normal text-sm pt-4 space-y-4">
				<li>AstroJS</li>
				<li>TailwindCSS</li>
				<li>CloudFlare</li>
				<li>Github/Gitlab pages</li>
			</ul>
		</p>
		<ul role="list" class="text-gray-500 font-normal text-sm pt-4 space-y-4">
				<li>
					<a href="cf-waf-block/">
						WAF Block
					</a>
				</li>
				<li>
					<a href="cf-500/">
						500 Class Errors
					</a>
				</li>
				<li>
					<a href="cf-1000/">
						1000 Class Errors
					</a>
				</li>
				<li>
					<a href="cf-challenge-basic/">
						Basic Security Challenge
					</a>
				</li>
				<li>
					<a href="cf-waf-challenge/">
						WAF Challenge
					</a>
				</li>
				<li>
					<a href="cf-country-challenge/">
						Country Challenge
					</a>
				</li>
				<li>
					<a href="cf-attack/">
						I'm Under Attack Modeâ„¢ Challenge
					</a>
				</li>
				<li>
					<a href="cf-rate-limit/">
						429 errors
					</a>
				</li>
		</ul>


	</main>
</Layout>

<style>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--theme-purple: hsl(256, 27%, 19%);
	}
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}

	a {
		color: rgb(var(--accent)) !important;
		text-underline-color: rgb(var(--accent)) !important;
		border-color: rgb(var(--accent)) !important;
	}
</style>
