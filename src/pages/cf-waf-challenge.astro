---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Attention Required!">
  <div class="w-full max-w-lg mx-auto mt-20 p-5">
    <h1 class="font-thin text-3xl text-red-600">Security Check</h1>

    <p class="text-gray-700 text-xl font-thin mb-4">Please complete the captcha below to access this website.</p>

    <div class="text-gray-400 pt-4">
      <p>::CAPTCHA_BOX::</p>
    </div>
    <div class="text-gray-400 pt-2">
      <p>Ray ID: ::RAY_ID::</p>
      <p>Client IP: ::CLIENT_IP::</p>
    </div>
  </div>
</Layout>