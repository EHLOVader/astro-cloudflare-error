---
import Layout from '../layouts/Layout.astro';
import ContactSupport from '../components/ContactSupport.astro';
---

<Layout title="Attention Required!">
  <div class="w-full max-w-lg mx-auto mt-20 p-5">
    <h1 class="font-bold text-3xl text-red-600">Error 429.</h1>

    <p class="text-gray-900 mb-4">You have been temporarily banned from this website due to performing an action too many times.</p>

    <ContactSupport subject_prefix="429 - Too Many Requests" />

    <div class="text-gray-400 pt-2">
      <p>Ray ID: ::RAY_ID::</p>
      <p>Client IP: ::CLIENT_IP::</p>
    </div>
  </div>
</Layout>