---
import Layout from '../layouts/Layout.astro';
import CLOUDFLARE_ERROR_500S_BOX from '../components/CLOUDFLARE_ERROR_500S_BOX.astro';
import ContactSupport from '../components/ContactSupport.astro';
---

<Layout title="500 - Internal Error">

    <div class="w-full max-w-lg mx-auto mt-20 p-5">
      <h1 class="font-bold text-2xl text-black">
        Internal Error.
      </h1>
      <p class="text-gray-900 mb-4">
        We're sorry, something is not right, and it's most likely our fault.
      </p>
      <ContactSupport subject_prefix="500 - Internal Error" />
      <div class="text-gray-400 pt-4 text-sm">
          <CLOUDFLARE_ERROR_500S_BOX/>
      </div>
    </div>
</Layout>